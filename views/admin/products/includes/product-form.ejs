<form
  action="<%= submitPath %>?_csrf=<%= locals.doubleCsrfToken %>"
  method="POST"
  enctype="multipart/form-data"
>
  <p>
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      name="title"
      value="<%= product.title %>"
      required
    />
  </p>

  <div id="image-upload-control">
    <p>
      <label for="image">Image</label>
      <input
        type="file"
        id="image"
        name="image"
        accept="image/png, image/jpeg, image/jpg, image/gif"
      />
    </p>

    <img src="" alt="Selected image." />
  </div>

  <p>
    <label for="summary">Summary</label>
    <input
      type="text"
      id="summary"
      name="summary"
      value="<%= product.summary
    %>"
      required
      maxlength="250"
    />
  </p>

  <p>
    <label for="price">Price</label>
    <input
      type="number"
      id="price"
      name="price"
      value="<%= product.price %>"
      min="0.01"
      step="0.01"
      required
    />
  </p>

  <p>
    <label for="materials">materials</label>
    <input
      type="text"
      id="materials"
      name="materials"
      value="<%= product.materials
    %>"
      required
      maxlength="250"
    />
  </p>

  <p>
    <label for="dimensions">dimensions</label>
    <input
      type="text"
      id="dimensions"
      name="dimensions"
      value="<%= product.dimensions
    %>"
      required
      maxlength="250"
    />
  </p>

  <p>
    <label for="description">Description</label>
    <textarea id="description" name="description" rows="7" required>
<%= product.description %></textarea
    >
  </p>
  <button type="reset" class="btn btn-alt">Reset</button>
  <button class="btn">Save</button>
</form>
